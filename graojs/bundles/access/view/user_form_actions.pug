.form-group
  button.btn.btn-success(type='button', ng-click='createOrUpdateUser("listUser");')=__('Save')
  | 
  button.btn.btn-warning(type='button', ng-click='createOrUpdateUser("createOrUpdateUser");')=__('Save and continue')
  | 
  button.btn.btn-danger(type='button', ng-show="user._id", ng-click='user.$delete(); clearUser(); queryUser(); countUser(); share.window("listUser");')=__('Remove')
  | 
  button.btn.btn-info(type='button', ng-click='share.window("showUser")')=__('Show')
  | 
  button.btn.btn-default(type='button', ng-click='clearUser(); queryUser(); share.window("listUser")')=__('List')